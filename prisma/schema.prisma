generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Klad {
    id                  String      @id @default(uuid()) @map("_id") 
    ownerId             String?
    isApproved          Boolean?
    isRejected          Boolean?
    isDraft             Boolean?    @default(true)
    name                String
    categoryId          String
    subCategoryId       String
    description         String
    tags                String[]
    budgetNeeded        Float
    budgetCollected     Float?       @default(0)     
    partPrice           Float
    minPartsPurchasable Int
    maxPartsPurchasable Int
    createdAt           DateTime?   @default(now())
    updatedAt           DateTime?   @default(now())

    @@unique([id, ownerId])

}

model Category{
  id                    String      @id @default(uuid()) @map("_id") 
  name                  String
  createdAt             DateTime?   @default(now())
  updatedAt             DateTime?   @default(now())

}

model SubCategory{
  id                    String      @id @default(uuid()) @map("_id")
  name                  String
  categoryId            String
  createdAt             DateTime?   @default(now())
  updatedAt             DateTime?   @default(now())
}



model Milestone{
  id                    String      @id @default(uuid()) @map("_id")
  name                  String
  dueDate               DateTime
  kladId                String
  createdAt             DateTime?   @default(now())
  updatedAt             DateTime?   @default(now())
}
